@model IEnumerable<ProjetoTcs.Models.RotaDosFuncionarios>
@{
    ViewBag.Title = "Index";
}

<div class="header">
    <h1>Relação das  Rotas</h1>
</div>

<div class="article"  >
    <form action="/Rota/Post" method="post">
        <label for="dataInicio"> Data Inicio:</label><br>
        <input type="text"id="dataInicio" name="dataInicio" value="" class="teste form-control" ><br>
        <label for="dataFim"> Data Fim:</label><br>
        <input type="text" id="dataFim" name="dataFim" value="" class="teste form-control"><br><br>
        <input type="submit" value="Filtrar" class="teste btn btn-primary btn-lg center-block">
    </form>
</div>

<div class="sidebar">
    <table class="table table-striped table-hover">
        @*<thead>
            <tr><th colspan="5">Rotas</th></tr>
        </thead>*@

        <tbody>
            <tr>
                <td style="background-color:#999">Codigo Rota</td>
                <td style="background-color:#999">Nome PdvFuncionario</td>
                <td style="background-color:#999"> Cidade</td>
                <td style="background-color:#999"> Rua </td>
                <td style="background-color:#999"> Funcionário</td>
            </tr>
            @if (Model.FirstOrDefault() != null)
            {
                foreach (var rota in Model)
                {
                    <tr>
                        <td>@rota.IdRota</td>
                        <td>@rota.PdvFuncionario</td>
                        <td>@rota.Cidade</td>
                        <td>@rota.Rua</td>
                        <td>@rota.Funcionario</td>
                       
                    </tr>

                }
            }
          
        </tbody>
    </table>
</div>
<div class="panel-footer panel-info">
</div>

<style>
    .teste {
        display: inline-block;
        width: 90px;
    }
    .header {
        width: 100%;
        border: solid 1px #000;
    }

    .article {
        width: 13%;
        float: left;
        border: solid 1px #000;
        display: inline;
        text-align: center;
        height: 250px;
    }

    .sidebar {
        display: inline;
        width: 87%;
        float: right;
       
    }
     table, td, th, tfoot {
        border: solid 1px #000;
        padding: 5px;
    }

     .satania {
        background-color: #999;
    }

 
</style>


    



