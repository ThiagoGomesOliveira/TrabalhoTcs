@model IEnumerable<ProjetoTcs.Models.RestricoesPdv>
@{
    ViewBag.Title = "Index";
}

<h3 style="text-align:center">Pdv/Funcionario/Endereço</h3>
<h6>Tabela Funcionário</h6>


<table style="width:100%">
    <tr>
        <td style="background-color:#999">Funcionário</td>
        <td style="background-color:#999">Jornada</td>
        <td style="background-color:#999">Inicio/Jornada de Trabalho</td>
        <td style="background-color:#999">Cidade</td>
        <td style="background-color:#999">Rua</td>
    </tr>
    <tr>
        <td>@ViewBag.Nome</td>
        <td>@ViewBag.Jornada</td>
        <td>@ViewBag.InicioJornada</td>
        <td>@ViewBag.Cidade</td>
        <td>@ViewBag.Rua</td>
    </tr>
</table>



<div class="panel-heading">
    <h2></h2>
</div>


<div class="panel-body">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td style="background-color:#999"> Nome Pdv (Supermercado)</td>
                <td style="background-color:#999"> Inicio Atendimento</td>
                <td style="background-color:#999"> Tempo Visitação</td>
                <td style="background-color:#999"> Cidade </td>
                <td style="background-color:#999"> Rua</td>

            </tr>
        </thead>
        <tbody>
            @if (Model.FirstOrDefault() != null)
            {
                foreach (var rota in Model)
                {
                    <tr>
                        <td>@rota.NomeEmpresa</td>
                        <td>@rota.InicioAtendimento</td>
                        <td>@rota.FimAtendimento</td>
                        <td>@rota.Cidade</td>
                        <td>@rota.Rua</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<div class="panel-footer panel-info"></div>
<div style="text-align:left">
    @Html.ActionLink("Gerar Rota ","GerarRota","PdvFuncionario", new { @class = "btn btn-warning " })
    @Html.ActionLink("Tela Log","Log", new { @class = "btn btn-primary " })
</div>

    

<style>
    table, td, th, tfoot {
        border: solid 1px #000;
        padding: 5px;
    }
</style>

@section styles{
    <link href="@Url.Content("~/content/DataTables/css/dataTables.bootstrap.css")" rel="stylesheet" />


}


@section ScriptPage {
    <script type="text/javascript" src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="@Url.Content("~/scripts/DataTables/jquery.dataTables.js")"></script>
    <script src="@Url.Content("~/scripts/DataTables/dataTables.bootstrap.js")"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.table').dataTable({
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.10.12/i18n/Portuguese-Brasil.json"
                }

            });
            "order"[[1, "asc"]]
        });
    </script>
}
