@model IEnumerable<ProjetoTcs.Models.Destino>
@{
    ViewBag.Title = "Index";
}

<style>
    table, td, th, tfoot {
        border: solid 1px #000;
        padding: 5px;
    }
</style>

<h2 style="text-align:center"> Tela de Log</h2>
    <table style="width:100%">
        <tr>
            <td style="background-color:#999">Funcionário</td>
            <td style="background-color:#999">Cidade</td>
            <td style="background-color:#999">Rua</td>
        </tr>
        <tr>
            <td>@ViewBag.Nome</td>
            <td>@ViewBag.Cidade</td>
            <td>@ViewBag.Rua</td>
        </tr>
    </table>
<div class="panel-heading">
    <h2></h2>
</div>
<div class="panel-body">
      <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <td style="background-color:#999">Nome Empresa</td>
                <td style="background-color:#999">Cidade</td>
                <td style="background-color:#999">Rua</td>
                <td style="background-color:#999">Inicio Atendimento</td>
                <td style="background-color:#999">Tempo Visita</td>
                <td style="background-color:#999">Tempo de destino</td>
            </tr>
        </thead>
        <tbody>

            @foreach (var destino in Model)
            {

                <tr>
                    <td>@destino.PdvFuncionario.NomeEmpresa</td>
                    <td>@destino.Endereco.Cidade</td>
                    <td>@destino.Endereco.Rua</td>
                    <td>@destino.PdvFuncionario.InicioAtendimento</td>
                    <td>@destino.PdvFuncionario.TempoVisitacao</td>
                    <td>@destino.Tempo </td>
                </tr>
            }

        </tbody>
    </table>


</div>